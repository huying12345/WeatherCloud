    <div style="width:100%; height:1px;"></div>
  

    <table cellpadding="0" cellspacing="0" style=" height:20px;" class="station-table" >

        <tr >

            <td class="selecttabicon" id="station-temp" style=" vertical-align:middle;border:2px solid #DDDDDD" align="center" name="1"><a>气温</a></td>
            <td class="selecttabicon " id="station-rain" style=" vertical-align:middle;border:2px solid #DDDDDD" align="center" name="1"><a>雨量</a></td>
            <td class="selecttabicon " id="station-wind" style=" vertical-align:middle;border:2px solid #DDDDDD" align="center" name="1"><a>风向风速</a></td>
            <td class="selecttabicon " id="station-njd" style=" vertical-align:middle;border:2px solid #DDDDDD" align="center" name="1"><a>能见度</a></td>
            <td class="selecttabicon " id="station-xdsd" style=" vertical-align:middle;border:2px solid #DDDDDD;display:none;" align="center" name="1"><a>相对湿度和风</a></td>
            <td class="selecttabicon " id="station-dzm" style=" vertical-align:middle;border:2px solid #DDDDDD" align="center" name="1"><a>等值面图</a></td>
        </tr>

    </table>
 

    <p style=" text-align:center;font-weight:bold;font-size:2rem;padding:10px;display:none;" id="nolist">暂无数据</p>
    <div style="width:100%;height:300px;" id="world-map"></div>
    <table class="table table-striped " id="station-tables">
        <thead>
            <tr>
                
                <th class="stationName">站点</th>
                <th class="station-temp">瞬时气温</th>
                <th class="station-temp">今日最低温</th>
                <th class="station-temp">今日最高温</th>
                <th class="station-wind" style="display:none;">1h最大风速</th>
                <th class="station-wind" style="display:none;">3h最大风速</th>
                <th class="station-wind" style="display:none;">6h最大风速</th>
                <th class="station-wind" style="display:none;">24h最大风速</th>
                <th class="station-rain" style="display:none;">1h累计雨量</th>
                <th class="station-rain" style="display:none;">3h累计雨量</th>
                <th class="station-rain" style="display:none;">6h累计雨量</th>
                <th class="station-rain" style="display:none;">24h累计雨量</th>
            </tr>
        </thead>
        <tbody data-bind='foreach: stationListArray' id="stationlist">
            <tr data-bind="attr: {id:station,class:rainhidden}">
                <td class="stationName" data-bind="text:stationname"></td>
                <td class="station-temp" data-bind="text:temp">瞬时气温</td>
                <td class="station-temp" data-bind="text:mintemp24">今日最低温</td>
                <td class="station-temp" data-bind="text:maxtemp24">今日最高温</td>
                <td class="station-wind" data-bind="text:windlevel" style="display:none;">1h最大风速</td>
                <td class="station-wind" data-bind="text:maxwindlevel2" style="display:none;">3h最大风速</td>
                <td class="station-wind" data-bind="text:maxwindlevel3" style="display:none;">6h最大风速</td>
                <td class="station-wind" data-bind="text:maxwindlevel24" style="display:none;">24h最大风速</td>
                <td class="station-rain" data-bind="text:totalrain1" style="display:none;">1h累计雨量</td>
                <td class="station-rain" data-bind="text:totalrain2" style="display:none;">3h累计雨量</td>
                <td class="station-rain" data-bind="text:totalrain3" style="display:none;">6h累计雨量</td>
                <td class="station-rain" data-bind="text:totalrain24" style="display:none;">24h累计雨量</td>
            </tr>
        </tbody>
    </table>
</div>


