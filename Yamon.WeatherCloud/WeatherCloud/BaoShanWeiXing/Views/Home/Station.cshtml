@{
    ViewBag.Title = "雷达卫星";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section styles{
<link href="~/Static/ImgPlay/css/style.css" rel="stylesheet" />


<style>
    .noselect {
        background-color: white;
        background: url(../../Static/ImgPlay/Images/noselect.png) repeat;
    }

    .select {
        color: #ffffff !important;
        background: url(../../Static/ImgPlay/Images/select.png) repeat;
        vertical-align: middle;
    }
      .select a{
        color: #ffffff !important;
       
    }
    #district {
        border-collapse: collapse;
    }

        #district td {
            height: 30px;
            line-height: 30px;
            text-align: center;
            padding: 3px;
        }

    #imgshow {
    }

    .imageinfo {
        padding: 0px;
        margin-top: 12px;
    }

        .imageinfo p {
            margin: 2px;
        }

    .headerdiv {
        height: 35px;

        background: #ffffff url('../../Static/ImgPlay/Images/head.png') repeat-x;
      
        font-weight: bold;
        padding: 10px 3px 5px 5px;
    }

    body {
        color: #555555;
    }




</style>

}
@section scripts{

<script src="~/Static/echarts/echarts.min.js"></script>

<script src="~/Static/ImgPlay/js/touchswipe.js"></script>
}

<div style="background-color: #ffffff;  ">
    @*<div class="headerdiv">
        <table>
            <tr>

                <td>
                    <div style="margin-left:4px;color:#4b6594;">上海海洋气象台<span id="fbsj" class="fbsj">2015年06月02日23点30分</span></div>
                </td>
