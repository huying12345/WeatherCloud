@{
    ViewBag.Title = "Index";
    Layout = "Layout.cshtml";
}     
<link href="~/assets/css/index2.css" rel="stylesheet" />
<link href="~/assets/libs/jquery-weui/jquery-weui.min.css" rel="stylesheet" />
<header class="bar bar-nav">
    <h1 class="title">我的收藏</h1>
    <a class="icon pull-left" href="/home2/index">
        <i class="iconfont icon-home"></i>
    </a>
</header>
<div class="content">
    <div class="my_order">
        <h3>我的收藏</h3>
        <div class="weui_cells">
            <!--ko foreach: subscribeNodes-->
            <div class="weui_cell">              
                <a data-bind="attr:{href:'/Home2/Show/'+NodeID}" class=" weui_cell_bd weui_cell_primary">
                    <i data-bind="attr:{class:NodePicUrl}"></i>
                    <span data-bind="text:NodeName">气温</span>
                </a>
                <div class="weui_cell_ft">
                    <a class="iconfont icon-shanchu" data-bind="click:$parent.removeSubscribeNode"></a>
                </div>          
            </div>
            <!--/ko-->  
        </div>
    </div>
    <div class="orderList">
        <!--ko foreach: nodes-->
        <h3 data-bind="text:NodeName"></h3>
        <!--ko foreach: children-->
        <h4 class="my_bottom" data-bind="text:NodeName"></h4>
        <!--ko foreach: children-->
        <!--ko if: children.length>0-->
        <h4 class="my_bottom" data-bind="text:NodeName"></h4>
        <!--/ko-->
            <!--ko if: children.length==0-->
            <div class="weui_cell">
                <a data-bind="attr:{href:'/Home2/Show/'+NodeID}" class="weui_cell_bd weui_cell_primary">
                    <i data-bind="attr:{class:NodePicUrl}"></i>
                    <span data-bind="text:NodeName">气温</span>
                </a>
                <div class="weui_cell_ft">
                    <span class="iconfont icon-dingyue" data-bind="attr:{nodeId:NodeID},click:$root.addSubscribeNode"></span>
                </div>
            </div>      
            <!--/ko-->
            <!--ko foreach: children-->
            <div class="weui_cell">
                <a data-bind="attr:{href:'/Home2/Show/'+NodeID}" class="weui_cell_bd weui_cell_primary">
                    <i data-bind="attr:{class:NodePicUrl}"></i>
                    <span data-bind="text:NodeName">气温</span>
                </a>
                <div class="weui_cell_ft">
                    <span class="iconfont icon-dingyue" data-bind="attr:{nodeId:NodeID},click:$root.addSubscribeNode"></span>    
                </div>
            </div>            
            <!--/ko-->
            <!--/ko-->
            <!--/ko-->
            <!--/ko-->
        </div>
</div>
@section scripts{
    <script>
        $(function () {
            var nodeViewModel = new NodeViewModel();
            ko.applyBindings(nodeViewModel);
            nodeViewModel.init(0);       
        });
    </script>
}
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/jquery-weui/jquery-weui.min.js"></script>
